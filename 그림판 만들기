<!DOCTYPE html>
<html>
<head>
  <title>그림판 만들기</title>
</head>
<body>

<canvas id="myCanvas" width="800" height="500" style="border:1px solid #000;"></canvas>
<br>
<input type="color" id="colorPicker">
<input type="range" id="penSize" min="1" max="20" value="5">
<button onclick="useEraser()" style="background-color: white; color: black;">Eraser</button>
<button onclick="saveImage()">Save Image</button>

<script>
  var canvas = document.getElementById('myCanvas');
  var ctx = canvas.getContext('2d');
  var painting = false;
  var penColor = 'black';
  var eraserMode = false;
  var penSize = 5;

  function startPosition(e) {
    painting = true;
    draw(e);
  }

  function endPosition() {
    painting = false;
    ctx.beginPath();
  }

  function draw(e) {
    if (!painting) return;
    ctx.lineWidth = penSize;
    ctx.lineCap = 'round';
    if (eraserMode) {
      ctx.strokeStyle = 'white';
      ctx.lineWidth = 20;
    } else {
      ctx.strokeStyle = penColor;
    }

    ctx.lineTo(e.clientX - canvas.offsetLeft, e.clientY - canvas.offsetTop);
    ctx.stroke();
    ctx.beginPath();
    ctx.moveTo(e.clientX - canvas.offsetLeft, e.clientY - canvas.offsetTop);
  }

  function changeColor(color) {
    penColor = color;
    eraserMode = false;
  }

  function useEraser() {
    eraserMode = true;
    penColor = 'white';
  }

  canvas.addEventListener('mousedown', startPosition);
  canvas.addEventListener('mouseup', endPosition);
  canvas.addEventListener('mousemove', draw);
  canvas.addEventListener('mouseleave', endPosition);

  canvas.addEventListener('touchstart', startPosition);
  canvas.addEventListener('touchend', endPosition);
  canvas.addEventListener('touchmove', draw);

  // Color picker input event
  document.getElementById('colorPicker').addEventListener('input', function(event) {
    penColor = event.target.value;
    eraserMode = false;
  });

  // Pen size slider input event
  document.getElementById('penSize').addEventListener('input', function(event) {
    penSize = event.target.value;
  });

  // Save image function
  function saveImage() {
    var image = canvas.toDataURL(); // Get the canvas data as a URL
    var link = document.createElement('a'); // Create a link element
    link.href = image; // Set the href attribute to the canvas data URL
    link.download = 'my_drawing.png'; // Set the download attribute with a default name
    link.click(); // Simulate a click on the link to trigger download
  }

</script>
<h1>2302575 이영주</h1>
</body>
</html>
